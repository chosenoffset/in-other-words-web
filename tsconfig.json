{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../../.cache/JetBrains/IntelliJIdea2025.2/javascript/typings/express/4.17.23/node_modules/@types/node/module.d.ts"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
